{
  "manifest_version": 3,
  "name": "PomoDoctor",
  "version": "1.0",
  "author":"Raul Dias",
  "description": "Extens√£o PomoDoctor",
  "permissions": ["activeTab"],
  "icons": {
    "48": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  }
}
